generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model hotspot {
  id               Int     @id @default(autoincrement())
  wayru_device_id  String  @unique @db.Uuid
  name             String? @unique
  location_name    String?
  portal_config_id Int?
  subscription_id  Int?

  portal_config portal_config? @relation(fields: [portal_config_id], references: [id], onDelete: SetNull)
  subscription  subscriptions? @relation(fields: [subscription_id], references: [id], onDelete: SetNull)

  network_configs network_config[]
}

model portal_config {
  id                Int     @id @default(autoincrement())
  user_id           String
  portal_name       String
  welcome_message   String?
  background_color  String?
  text_color        String?
  button_color      String?
  button_text_color String?

  logo_asset_id   Int
  banner_asset_id Int

  ad_access      Boolean @default(false)
  voucher_access Boolean @default(false)
  form_access    Boolean @default(false)

  redirect_url String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  ads      ad[]
  hotspots hotspot[]

  banner asset @relation("banner_asset", fields: [banner_asset_id], references: [id])
  logo   asset @relation("logo_asset", fields: [logo_asset_id], references: [id])
}

model network_config {
  id               Int               @id @default(autoincrement())
  device_config    Json
  type             networkConfigType
  device_config_id Int
  hotspot_id       Int?

  hotspot hotspot? @relation(fields: [hotspot_id], references: [id], onDelete: SetNull)
}

model ad {
  id               Int      @id @default(autoincrement())
  portal_config_id Int?
  interaction_time Int
  format           adFormat

  ad_asset_id Int?
  asset       asset? @relation(fields: [ad_asset_id], references: [id])

  portal_config portal_config? @relation(fields: [portal_config_id], references: [id], onDelete: Cascade)

  customer_uuid String?    @db.Uuid
  customer      customers? @relation(fields: [customer_uuid], references: [customer_uuid], onDelete: SetNull)
}

model asset {
  id        Int    @id @default(autoincrement())
  asset_url String

  ad_asset             ad[]
  banner_portal_config portal_config[] @relation("banner_asset")
  logo_portal_config   portal_config[] @relation("logo_asset")
}

model customers {
  id            Int    @id @default(autoincrement())
  customer_uuid String @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  full_name String  @db.VarChar(255)
  email     String? @db.VarChar(150)

  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @db.Timestamp(6)

  companies                companies[]
  subscriptions            subscriptions?
  ads                      ad[]
  subscription_transaction subscription_transaction[]
}

model companies {
  id          Int            @id @default(autoincrement())
  customer_id Int?
  name        String         @db.VarChar(255)
  email       String         @db.VarChar(255)
  tax_id      String?        @db.VarChar(100)
  vat_number  String?        @db.VarChar(100)
  industry    industry_type?
  created_at  DateTime?      @default(now()) @db.Timestamp(6)
  updated_at  DateTime?      @default(now()) @db.Timestamp(6)

  customers customers? @relation(fields: [customer_id], references: [id], onDelete: Cascade)
}

model subscription_plan {
  id               Int    @id @default(autoincrement())
  name             String
  base_price_cents Int
  currency         String @default("USD")

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  subscriptions subscriptions[]
}

model subscriptions {
  id          Int @id @default(autoincrement())
  customer_id Int @unique
  plan_id     Int

  hotspot_limit Int

  status SubscriptionStatus @default(ACTIVE)

  is_trial      Boolean   @default(false)
  trial_ends_at DateTime?

  cancel_at_period_end Boolean   @default(false)
  canceled_at          DateTime?

  expiry_date DateTime @db.Timestamp(6)

  base_price_cents Int
  currency         String @default("USD")

  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  customer customers         @relation(fields: [customer_id], references: [id], onDelete: Cascade)
  plan     subscription_plan @relation(fields: [plan_id], references: [id])

  hotspots         hotspot[]
  premium_features subscription_premium_feature[]
  transactions     subscription_transaction[]
}

model premium_feature {
  id           Int                @id @default(autoincrement())
  feature_type PremiumFeatureType
  price_cents  Int
  currency     String             @default("USD")
  is_active    Boolean            @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  subscriptions subscription_premium_feature[]
}

model subscription_premium_feature {
  id                 Int @id @default(autoincrement())
  subscription_id    Int
  premium_feature_id Int

  price_cents Int
  currency    String @default("USD")

  created_at DateTime @default(now())

  subscription    subscriptions   @relation(fields: [subscription_id], references: [id], onDelete: Cascade)
  premium_feature premium_feature @relation(fields: [premium_feature_id], references: [id])
}

model subscription_transaction {
  id              Int @id @default(autoincrement())
  subscription_id Int
  customer_id     Int

  type         SubscriptionTransactionType
  amount_cents Int
  currency     String                      @default("USD")
  description  String?

  created_at DateTime @default(now())

  subscription subscriptions @relation(fields: [subscription_id], references: [id], onDelete: Cascade)
  customer     customers     @relation(fields: [customer_id], references: [id], onDelete: Cascade)
}

enum PremiumFeatureType {
  AD
  VOUCHER
  FORM
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
  PAUSED
}

enum SubscriptionTransactionType {
  PLAN_PURCHASE
  PLAN_RENEWAL
  PLAN_UPGRADE
  PLAN_DOWNGRADE

  PREMIUM_FEATURE_ADD
  PREMIUM_FEATURE_REMOVE

  TRIAL_START
  TRIAL_END

  SUBSCRIPTION_CANCELED
  SUBSCRIPTION_REACTIVATED

  MANUAL_ADJUSTMENT
}

enum adFormat {
  static
  gif
  video
}

enum networkConfigType {
  open
  private
}

enum industry_type {
  telecom
  finance
  technology
  healthcare
  education
}
