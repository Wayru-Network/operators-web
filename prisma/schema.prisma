generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model hotspot {
  id               Int              @id @default(autoincrement())
  wayru_device_id  String           @unique @db.Uuid
  name             String?          @unique
  location_name    String?
  portal_config_id Int?
  subscription_id  Int?
  portal_config    portal_config?   @relation(fields: [portal_config_id], references: [id])
  subscription     subscriptions?   @relation(fields: [subscription_id], references: [id])
  network_configs  network_config[]
}

model portal_config {
  id                Int       @id @default(autoincrement())
  user_id           String
  portal_name       String
  welcome_message   String?
  background_color  String?
  text_color        String?
  button_color      String?
  logo_asset_id     Int
  banner_asset_id   Int
  ad_access         Boolean
  voucher_access    Boolean
  form_access       Boolean
  redirect_url      String
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  button_text_color String?
  ads               ad[]
  hotspots          hotspot[]
  banner            asset     @relation("banner_asset", fields: [banner_asset_id], references: [id])
  logo              asset     @relation("logo_asset", fields: [logo_asset_id], references: [id])
}

model network_config {
  id               Int               @id @default(autoincrement())
  device_config    Json
  hotspot_id       Int?
  type             networkConfigType
  device_config_id Int
  hotspot          hotspot?          @relation(fields: [hotspot_id], references: [id])
}

model ad {
  id               Int            @id @default(autoincrement())
  portal_config_id Int?
  interaction_time Int
  ad_asset_id      Int?
  format           adFormat
  asset            asset?         @relation(fields: [ad_asset_id], references: [id])
  portal_config    portal_config? @relation(fields: [portal_config_id], references: [id])
}

model asset {
  id                   Int             @id @default(autoincrement())
  portal_config_id     Int?
  ad_asset_id          Int?
  asset_url            String
  ad_asset             ad[]
  banner_portal_config portal_config[] @relation("banner_asset")
  logo_portal_config   portal_config[] @relation("logo_asset")
}

model companies {
  id          Int            @id @default(autoincrement())
  customer_id Int?
  name        String         @db.VarChar(255)
  email       String         @db.VarChar(255)
  tax_id      String?        @db.VarChar(100)
  vat_number  String?        @db.VarChar(100)
  industry    industry_type?
  created_at  DateTime?      @default(now()) @db.Timestamp(6)
  updated_at  DateTime?      @default(now()) @db.Timestamp(6)
  customers   customers?     @relation(fields: [customer_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model customers {
  id                 Int            @id @default(autoincrement())
  customer_uuid      String         @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  full_name          String         @db.VarChar(255)
  created_at         DateTime?      @default(now()) @db.Timestamp(6)
  updated_at         DateTime?      @default(now()) @db.Timestamp(6)
  email              String?        @db.VarChar(150)
  companies          companies[]
  stripe_customer_id String?        @db.VarChar(100)
  subscriptions      subscriptions?
}

enum adFormat {
  static
  gif
  video
}

enum networkConfigType {
  open
  private
}

enum industry_type {
  telecom
  finance
  technology
}

model subscriptions {
  id                     Int      @id @default(autoincrement())
  customer_id            Int      @unique
  hotspot_limit          Int
  stripe_subscription_id String?  @unique @db.VarChar(100)
  created_at             DateTime @default(now()) @db.Timestamp(6)
  updated_at             DateTime @updatedAt @db.Timestamp(6)

  customer customers @relation(fields: [customer_id], references: [id], onDelete: Cascade)
  hotspots hotspot[]
}
